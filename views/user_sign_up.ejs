<link rel="stylesheet" href="/css/authentication.css">


   
<form action="/users/create" method="POST" class="login-form">
        <h1 style="text-align: center;">Sign Up</h1>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Your email">
        </div>
        
        <div class="form-group">
            <label for="name">UserName</label>
            <input type="text" class="form-control" name="name" placeholder="Username">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Your password">
        </div>
        <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password">
        </div>
    
        <div class="form-group">
            <button type="submit" class="btn btn-primary">SignUp</button>
        </div>

        <div class="form-group">
            <b>Already Have an account?</b>
            <a href="/users/signin">Login</a>
        </div>
        <div class="form-group">
            <img src="https://www.flaticon.com/svg/static/icons/svg/2702/2702602.svg" alt="google" class="mr-3 mt-3 rounded-circle" style="width:20px;" >
            <a href="/users/auth/google">SignUp with Google</a>
        </div>
</form>



